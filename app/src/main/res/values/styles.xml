    <style name="Bea_Theme" parent="@style/Theme.AppCompat">
        <!--<item name="background">@color/silver</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black_overlay</item>
        <item name="android:editTextStyle">@style/Bea_Theme.EditText</item>
        <item name="android:textViewStyle">@style/Bea_Theme.TextView</item>
        <item name="android:buttonStyle">@style/Bea_Theme.Button</item>
    </style>

    <style name="Bea_Theme.Activity">
        <item name="android:background">@color/charcoal</item>
    </style>

    <style name="Bea_Theme.Button">
        <item name="android:background">@drawable/beabutton_background</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/standard_padding</item>
        <item name="android:layout_margin">@dimen/standard_padding</item>
    </style>
    
    <style name="Bea_Theme.EditText" parent="Widget.AppCompat.EditText">
        <!--<item name="android:textColor">@drawable/edittext_text_color</item>-->
        <item name="android:textSize">@dimen/paragraph</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Bea_Theme.DialogView">
        <item name="android:background">@color/silver</item>
        <item name="android:color">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Bea_Theme.Call_Bell">
        <item name="android:background">@drawable/bea_theme_call_bell_fragment_background</item>
        <!--<item name="android:padding">@dimen/standard_padding</item>-->
    </style>

    <style name="Bea_Theme.plan_of_care">
        <item name="android:background">@color/silver</item>
        <!--<item name="android:padding">@dimen/standard_padding</item>-->
    </style>

    <style name="Bea_Theme.TextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/paragraph</item>
    </style>

    <style name="Bea_Theme.AlertDialog">
        <item name="android:windowBackground">@color/silver</item>
        <item name="android:color">@color/black</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:title">hello</item>
        <item name="android:windowTitleBackgroundStyle">@style/Bea_Theme.Title</item>
        <item name="android:gravity">center</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorControlNormal">@color/black</item>

    </style>

    <style name="Bea_Theme.Title">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:color">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>
</resources>
