<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/silver"
    android:minWidth="300dp"
    style="@style/Bea_Theme.AlertDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:padding="@dimen/standard_padding"
        android:id="@+id/dialog_station_title"
        android:background="@color/colorPrimary"
        android:layout_weight="6"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/standard_padding"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_station_image"
            android:layout_width="wrap_content"
            android:src="@drawable/call_bell_pain"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/dialog_station_body"
            android:text="Someone has hit the pain button"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/standard_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:padding="@dimen/standard_padding"
        android:layout_weight="6">

        <Button
            android:id="@+id/dialog_station_acknowledge"
            android:text="@string/back"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:layout_weight="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</LinearLayout>