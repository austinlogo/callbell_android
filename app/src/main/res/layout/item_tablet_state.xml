<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/station_item_state_indicator"
        android:layout_width="@dimen/standard_padding"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/station_item_bed_location"
        android:layout_width="@dimen/small_column"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_margin"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/standard_padding"
        />

    <TextView
        android:id="@+id/station_item_chief_complaint"
        android:text="@string/nurse_chief_complaint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/station_item_physician"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/station_item_nurse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/small_padding"
        android:layout_weight="7"
        />

    <ImageButton
        android:id="@+id/station_item_image_button"
        style="@style/Bea_Theme.TitleBarImageButton"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="@dimen/small_padding"
        android:src="@drawable/face_pain"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/station_item_pain_rating"
        android:layout_width="@dimen/small_column"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/standard_padding"
        android:gravity="left"
        />
</LinearLayout>