<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Bea_Theme.Activity"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_buttons_container"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/hospital_id"
            android:hint="@string/hospital_name"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:inputType="textCapCharacters"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/group_id"
            android:hint="@string/group_name"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <EditText
        android:id="@+id/login_id"
        android:hint="@string/location_hint"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@id/login_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <Button
            android:id="@+id/launch_station_experience"
            style="@style/Bea_Theme.Button"
            android:text="@string/station"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/launch_bed_experience"
            style="@style/Bea_Theme.Button"
            android:text="@string/bed"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>