<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/staff_fragment_layout"
    android:orientation="horizontal"
    android:focusable="true"
    android:paddingStart="@dimen/standard_padding"
    style="@style/Bea_Theme.Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/staff_physician_box"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/small_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/staff_physician"/>
        <EditText
            style="@style/Bea_Theme.EditText"
            android:id="@+id/staff_physician_field"
            android:nextFocusDown="@+id/staff_nurse_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/staff_nurse_box"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/small_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/staff_nurse"/>
        <EditText
            android:id="@+id/staff_nurse_field"
            style="@style/Bea_Theme.EditText"
            android:nextFocusDown="@+id/staff_resident_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/staff_resident_box"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/small_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/staff_resident"/>
        <EditText
            android:id="@+id/staff_resident_field"
            style="@style/Bea_Theme.EditText"
            android:nextFocusDown="@+id/staff_physician_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>