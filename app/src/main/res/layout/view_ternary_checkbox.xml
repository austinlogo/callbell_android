<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:duplicateParentState="true">

    <ImageView
        android:id="@+id/item_poc_list_item_img"
        android:src="@drawable/check_box_drawable"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/small_padding"
        android:padding="@dimen/small_padding"
        android:layout_alignParentRight="true"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:duplicateParentState="true"/>

    <TextView
        android:text="Hello"
        android:gravity="center_vertical"
        android:id="@+id/item_poc_list_item_text"
        android:textSize="@dimen/paragraph"
        android:textColor="@drawable/check_box_color"
        android:duplicateParentState="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        android:layout_toLeftOf="@id/item_poc_list_item_img"/>


</RelativeLayout>