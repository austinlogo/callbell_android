<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Bea_Theme.Activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/standard_padding"
            android:layout_height="match_parent"
            android:background="@color/transparent"> </TextView>

        <TextView
            android:id="@+id/station_item_bed_location_title"
            android:text="@string/bed"
            android:layout_width="@dimen/small_column"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/standard_padding" />

        <TextView
            android:id="@+id/station_item_chief_complaint_title"
            android:text="@string/nurse_chief_complaint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/standard_padding"
            android:layout_weight="6"
            />

        <TextView
            android:id="@+id/station_item_physician_title"
            android:text="@string/physician"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/standard_padding"
            android:layout_weight="7"
            />

        <TextView
            android:id="@+id/station_item_nurse_title"
            android:text="@string/nurse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/standard_padding"
            android:layout_weight="7"
            />

        <TextView
            android:id="@+id/station_item_pain_rating_title"
            android:text="@string/pain"
            android:layout_width="@dimen/small_column"
            android:gravity="right"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/standard_padding"
            android:paddingRight="@dimen/small_padding"/>
    </LinearLayout>

    <TableRow
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF"/>

    <ListView
        android:id="@+id/station_state_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
