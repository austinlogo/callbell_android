<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.callbell.callbell.presentation.bed.PlanOfCareFragment">

    <Spinner
        android:id="@+id/main_complaint_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <LinearLayout
        android:id="@+id/other_layout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/other_submit"
            android:text="@string/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/other_edittext"
            android:hint="@string/other"
            android:paddingStart="@dimen/indent_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lists_container"
        android:orientation="vertical"
        android:layout_below="@id/main_complaint_spinner"
        android:layout_above="@id/other_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView android:id="@+id/action_list_admin"
            android:layout_width="match_parent"
            android:layout_below="@id/main_complaint_spinner"
            android:layout_height="wrap_content" />

        <ListView android:id="@+id/action_list_patient"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_below="@id/main_complaint_spinner"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
