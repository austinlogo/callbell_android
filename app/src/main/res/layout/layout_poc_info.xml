<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/poc_info_layout"
    style="@style/Bea_Theme.AlertDialog"
    android:orientation="vertical"
    android:background="@color/silver"
    android:layout_width="700dip"
    android:layout_height="wrap_content"
    android:scaleType="fitCenter"
    android:adjustViewBounds="true">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/poc_info_title"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:padding="@dimen/standard_padding"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/poc_info_dismiss"
            android:text="@string/back"
            android:textSize="@dimen/title_size"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:padding="@dimen/standard_padding"
            android:background="@drawable/background_button_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <TextView
        android:id="@+id/poc_info_expanded_name"
        android:padding="@dimen/standard_padding"
        android:background="@color/colorAccent"
        android:textSize="@dimen/small_text"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <VideoView
        android:id="@+id/poc_info_video"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="300dip"/>

    <TextView
        android:id="@+id/poc_info_body"
        android:textColor="@color/black"
        android:padding="@dimen/standard_padding"
        android:textSize="@dimen/paragraph"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:padding="@dimen/standard_padding"
        android:layout_weight="6">

    </RelativeLayout>



</LinearLayout>