<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/activity_remote_update_staff_container"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/activity_remote_update_submit"
        android:text="@string/submit"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <FrameLayout
        android:id="@+id/activity_remote_update_poc_container"
        android:layout_width="match_parent"
        android:layout_below="@id/activity_remote_update_staff_container"
        android:layout_above="@id/activity_remote_update_submit"
        android:layout_height="match_parent"/>


</RelativeLayout>