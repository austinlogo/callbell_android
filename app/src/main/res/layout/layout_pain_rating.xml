<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Bea_Theme.DialogView">

    <TextView
        style="@style/Bea_Theme.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/standard_padding"
        android:text="@string/pain_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_pain_rating_pain_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pain_button_pressed"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="@dimen/standard_padding">

            <ImageView
                android:id="@+id/layout_pain_rating_image_face_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/face_0"/>

            <TextView
                android:text="@string/pain_text_0"
                android:textSize="@dimen/paragraph"
                android:textColor="@color/black"
                android:paddingTop="@dimen/standard_padding"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_pain_rating_pain_2"
            android:layout_width="match_parent"
